// Parameters to test Laplace's law for two fluids.

[io]
simulationName = laplace-d3q19-gcc%lb.force.gcc[1][0]%
outputFormat = HDF5
outputPath = output/d3q19
createPath = true

checkpoint.cpFreq = 0

[lb]
timesteps = 1000
components = 2
fieldNames = [ "red", "blue" ]
tau = [ 1.0, 1.0 ]

force.enableShanChen = true
force.gcc = [ [ 0.0, 3.6 ], [ 3.6, 0.0 ] ]
force.psiForm = Exponential

init.fluidInit = [ EqDistLamellaeFrac , EqDistLamellaeFrac ]
init.fluidDensities = [ [0.5, 0.7, 0.5], [0.7, 0.5, 0.7] ]
init.lamellaeWidths = [ 0.25, 0.50, 0.25 ]
init.initRadius = 0.25 
init.interfaceThickness = 5.0

io.colourFreq = 1000
io.laplaceFreq = 0
io.densityFreq = 1000
//io.velocitiesFreq = 1

laplace.startCheck = 1000
laplace.relAccuracy = 0.0 

mask.maskInit = None

eqdist.eqDistForm = ThirdOrder

[lattice]
gn = [ 64, 4, 4  ]

