{
  "name": "merging-droplets-3d",
  "description": "Two droplets merging",
  "tags": [ "advection", "collision", "eqdist", "force" ],

  "configuration": "d3q19",
  "input-file": "merging-droplets-3d.in",
  "clean": [ "output" ],
  "parameters": [
    { "parameter": "lb.timesteps", "values": [ "0100", "1000" ] }
  ],
  "compare": {
    "data": [ "colour-red-blue", "density-red", "density-blue" ],
    "comparison": [
      { "type": "h5diff", "files": "%data%-merging-droplets-3d-*-t00000000.h5" },
      { "type": "h5diff", "files": "%data%-merging-droplets-3d-*-t00000100.h5", "accuracy": "1e-15" },
      { "type": "h5diff", "files": "%data%-merging-droplets-3d-*-t0000%lb.timesteps%.h5", "accuracy": "1e-14" }
    ]
  },

  "coverage": {
    "parameters": [
      { "parameter": "lb.timesteps", "value": "1" }
    ]
  }
}