{
  "name": "laplace-droplet-2d",
  "description": "Laplace test for a 2d droplet",
  "tags": [ "advection", "collision", "eqdist", "force", "laplace" ],

  "configuration": "d2q9",
  "input-file": "laplace-droplet-2d.in",
  "parameters": [
    { "parameter": "lb.timesteps", "values": [ "00000100", "00010000" ] }
  ],
  "clean": [ "output" ],
  "compare": {
    "data": [ "density-red", "density-blue", "colour-red-blue" ],
    "comparison": [ 
      { "type": "h5diff", "files": "%data%-laplace-droplet-2d-gcc3.6-*-t00000000.h5" },
      { "type": "h5diff", "files": "%data%-laplace-droplet-2d-gcc3.6-*-t00000100.h5", "accuracy": "1e-15" },
      { "type": "h5diff", "files": "%data%-laplace-droplet-2d-gcc3.6-*-t%lb.timesteps%.h5", "accuracy": "1e-15" }
    ]
  },

  "coverage": {
    "parameters": [
      { "parameter": "lb.timesteps", "value": "1" }
    ]
  }
}